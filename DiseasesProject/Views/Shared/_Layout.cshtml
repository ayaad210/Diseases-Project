<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-brand navbar-fixed-top  img-rounded " style="border:2px solid #4ca1b4;border-left:4px ;border-right:4px ">

        @*<div class="navbar navbar-in navbar-fixed-top  img-rounded " style="border:2px solid #4ca1b4;border-left:4px ;border-right:4px ">*@
        <div class="container" >
            <div class="navbar-header  ">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                 
             </div>
            @Html.ActionLink("Home ", "Index", "Home", new { area = "" }, new { @class = "navbar-brand  col-lg-1" })




                <div class="dropdown navbar-brand  col-lg-2">
                    <button style="margin:0; padding-left:60px;" class="btn   btn-default dropdown-toggle" type="button" data-toggle="dropdown">
                        Manage
                        <span class="caret"></span>
                    </button>
                    <ul style="margin:0 ;padding:0" class="dropdown-menu">
                        <li><a href="~/Diseases/index">Diseases</a></li>
                        <li class="divider"></li>
                        <li><a href="~/Diets/index">Diets</a></li>
                        <li><a href="~/Sports/index">Sports</a></li>
                        <li><a href="~/precantions/index">Pecenaton</a></li>
                        <li class="divider"></li>
                        <li><a href="~/Contacts/index">Messages</a></li>

                    </ul>
                </div>
            <div class="col-lg-6 text-center ">
                <h3 style="color:#4ca1b4">Data Management</h3>
            </div>
            <div></div> 
            </div>
              
        
            </div>




        <hr />
        <div class="container body-content" >
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year
            </footer>
        </div>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
        @RenderSection("Styles", required: false)


</body>
</html>
